<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:gravity="center_vertical|center_horizontal">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mainscreen_padding"
        android:padding="@dimen/mainscreen_padding"
        android:weightSum="2">
	    <Button
	        android:id="@+id/button_quick_match"
	        android:text="@string/quick_match"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:layout_marginLeft="@dimen/mainscreen_padding"
	        android:layout_marginRight="@dimen/mainscreen_padding"
	        android:textSize="@dimen/mainscreen_font_size"
	        style="@style/ModeButton" />
	    <Button
	        android:id="@+id/button_tournament"
	        android:text="@string/tournament"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:layout_marginLeft="@dimen/mainscreen_padding"
	        android:layout_marginRight="@dimen/mainscreen_padding"
	        android:textSize="@dimen/mainscreen_font_size"
	        style="@style/ModeButton" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/mainscreen_padding"
        android:padding="@dimen/mainscreen_padding"
        android:weightSum="2">
	    <Button
	        android:id="@+id/button_career"
	        android:text="@string/career"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:layout_marginLeft="@dimen/mainscreen_padding"
	        android:layout_marginRight="@dimen/mainscreen_padding"
	        android:textSize="@dimen/mainscreen_font_size"
	        style="@style/ModeButton" />
	    <Button
	        android:id="@+id/button_bluetooth"
	        android:text="@string/bluetooth"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:layout_marginLeft="@dimen/mainscreen_padding"
	        android:layout_marginRight="@dimen/mainscreen_padding"
	        android:textSize="@dimen/mainscreen_font_size"
	        style="@style/ModeButton" />
    </LinearLayout>
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
		<ImageView
			android:id="@+id/settings"
			android:src="@drawable/settings"
			android:contentDescription="@string/settings"
			android:layout_width="32dp"
			android:layout_height="32dp"
			android:layout_marginLeft="@dimen/mainscreen_padding"
			android:layout_gravity="left" />
		<ImageView
			android:id="@+id/sound_mode"
			android:contentDescription="@string/setting_sound"
			android:layout_width="32dp"
			android:layout_height="32dp"
			android:layout_marginRight="@dimen/mainscreen_padding"
			android:layout_gravity="right" />
    </FrameLayout>
</LinearLayout>